server {
    listen 80;

    location / {
        root /usr/share/nginx/html/server1;
        index index.html;
		error_page 405 = @405ejemplo1;
    }

	location @405ejemplo1 {
		return 200 'POST recibido en ejemplo1.com\n';
		add_header Content-Type text/plain;
	}
}

server {
    listen 80 default_server;

    location / {
        root /usr/share/nginx/html/server2;
        index index.html;
		error_page 405 = @405ejemplo2;
    }

	location @405ejemplo2 {
		return 200 'POST recibido en ejemplo2.com\n';
		add_header Content-Type text/plain;
	}
}

